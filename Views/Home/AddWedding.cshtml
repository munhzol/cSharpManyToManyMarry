@model Plan
<div class="jumbotron">
    <h1 class="display-4">Plan Your Wedding</h1>
</div>


<form action="/wedding/save" method="POST">
    
    <div class="form-group">
        <label asp-for="Wedder1"></label>
        <input asp-for="Wedder1" class="form-control">
        <span asp-validation-for="Wedder1" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Wedder2"></label>
        <input asp-for="Wedder2" class="form-control">
        <span asp-validation-for="Wedder2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>
